{% extends 'base.html.twig' %}

{% block body %}
    <h1>Coli</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coli.id }}</td>
            </tr>
            <tr>
                <th>Codecolis</th>
                <td>{{ coli.codeColis }}</td>
            </tr>
            <tr>
                <th>Poids</th>
                <td>{{ coli.poids }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ coli.prix }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if coli.dateCreation %}{{ coli.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('colis_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('colis_edit', { 'id': coli.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
