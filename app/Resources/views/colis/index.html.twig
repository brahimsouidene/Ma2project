{% extends 'base.html.twig' %}

{% block body %}
    <h1>Colis list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Codecolis</th>
                <th>Poids</th>
                <th>Prix</th>
                <th>Datecreation</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coli in colis %}
            <tr>
                <td><a href="{{ path('colis_show', { 'id': coli.id }) }}">{{ coli.id }}</a></td>
                <td>{{ coli.codeColis }}</td>
                <td>{{ coli.poids }}</td>
                <td>{{ coli.prix }}</td>
                <td>{% if coli.dateCreation %}{{ coli.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ coli.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('colis_show', { 'id': coli.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('colis_edit', { 'id': coli.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('colis_new') }}">Create a new coli</a>
        </li>
    </ul>
{% endblock %}
